<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:layout_marginTop="100px"
    android:padding="10px"
    tools:context=".fragment.perfilFragment">
    <!-- Contenedor principal -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_color_card_profile"
        android:orientation="vertical">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="50px"
    android:layout_margin="20px"
    app:cardElevation="10dp"
    app:cardCornerRadius="5pt"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5px"
        android:layout_margin="20px"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="100px"
        android:layout_height="100px"
        android:id="@+id/profilePic"
        android:src="@drawable/profilepic"
        android:layout_margin="10px"
        />
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:id="@+id/profileName"
        android:text="{UserName}"
        android:lineSpacingExtra="3sp"
        android:layout_gravity="center"
        />
</LinearLayout>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/numberLegajo"
            android:text="{Legajo}" />
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
        <com.google.android.material.chip.ChipGroup
            android:layout_width="match_parent"
            app:singleLine="true"
            style="@style/ChipsProfileGrupo"
            android:foregroundGravity="center"
            android:padding="50px"
            android:layout_height="wrap_content">
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/chipProfileCorreo"
                android:text="{Correo}"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/carrera"
                android:text="{Ingenieria}"/>
            <com.google.android.material.chip.Chip
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/userSIU"
                android:text="{Siu USER}"/>
        </com.google.android.material.chip.ChipGroup>
</androidx.core.widget.NestedScrollView>
    </LinearLayout>
</androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="vertical">
            <!-- Tarjeta 1: Materias Aprobadas -->
 <androidx.cardview.widget.CardView
                android:layout_width="450dp"
                app:cardCornerRadius="10dp"
                style="@style/cardProfile"
                app:cardUseCompatPadding="true"
                android:id="@+id/CardTest"
                android:layout_margin="5dp">
     <androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:background="#000"
        android:id="@+id/ViewProfileMateriasAprobadas"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">
        <com.google.android.material.chip.Chip
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            app:chipCornerRadius="100px"
            android:textSize="15sp"
            android:id="@+id/chipProfileMateriasAprobadas"
            app:chipIcon="@drawable/counter_1"
            />
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Materias Aprobadas"
            android:textColor="#000"
            android:textAlignment="center"
            />
    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>

            </androidx.cardview.widget.CardView>
            <!-- Tarjeta 2: Finales Restantes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/cardProfile"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        app:chipCornerRadius="100px"
                        android:textSize="15sp"
                        android:id="@+id/chipProfileFinalesRestantes"
                        app:chipIcon="@drawable/counter_1"
                        />
                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        style="@style/TextGeneral"
                        android:text="@string/finales_restantes"
                        />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
            <!-- Tarjeta 3: Podes Cursar -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardCornerRadius="10dp"
                app:cardUseCompatPadding="true"
                style="@style/cardProfile"
                android:layout_margin="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <com.google.android.material.chip.Chip
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:id="@+id/chipProfilePodesCursar"
                        app:chipCornerRadius="100px"
                        android:textSize="15sp"
                        app:chipIcon="@drawable/counter_1"
                        />
                    <ImageView
                        android:visibility="gone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/house"
                        />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Podes Cursar"
                        style="@style/TextGeneral"
                        />
                </LinearLayout>

            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <!-- Correo -->

        <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:background="#00000000"
        />
    </LinearLayout>

</FrameLayout>
