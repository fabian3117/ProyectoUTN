<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:http="http://schemas.android.com/apk/res-auto">

    <style name="ChipsProfileGrupo">
        <item name="chipStyle">@style/ChipThin</item>
    </style>

    <style name="ChipThin">
        <item name="android:background">@drawable/chip_background_thin</item>
        <item name="android:textColor">#FFF</item>
    </style>

    <style name="TextosPrincipales">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="chipPersonalizados">
        <item name="android:checkable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="cardProfile">
        <item name="android:height">100dp</item>
        <item name="android:layout_height">100dp</item>

    </style>

    <style name="TextGeneral">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/color_text_card_profile</item>
    </style>

    <style name="TextoRegistro">
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextoBienvenida">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_margin">5dp</item>
    </style>
</resources>